{
  "manifest_version": 3,
  "name": "Your Extension Name",
  "version": "1.0",
  "permissions": ["activeTab"],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
  },
  "web_accessible_resources": [
      {
          "resources": ["sidebar.html", "sidebar.css", "sidebar.js"],
          "matches": ["<all_urls>"]
      }
  ]
}
